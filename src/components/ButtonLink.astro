---
export interface Props extends Partial<HTMLAnchorElement> {
  href: string
  variant?: Variant
  size?: Size
  bleedX?: boolean
}

type Variant = 'primary'
type Size = 'medium'

const variantClass: Record<Variant, string> = {
  primary:
    'bg-brand-50 focus:bg-brand-100 hover:bg-brand-100 active:bg-brand-50 text-brand-700',
}

const sizeClass: Record<Size, string> = {
  medium: 'px-4 py-2',
}

const bleedXClass: Record<Size, string> = {
  medium: '-mx-4',
}

const {
  href,
  variant = 'primary',
  size = 'medium',
  bleedX,
  ...rest
} = Astro.props
---

<a
  {href}
  class:list={[
    'rounded-full',
    bleedX && bleedXClass[size],
    sizeClass[size],
    variantClass[variant],
  ]}
  {...rest}
>
  <slot />
</a>
