---
import { Debug } from 'astro/components'
import { format } from 'date-fns';

export interface Props {
  posts: any[]
  title?: string
}

const {posts, title} = Astro.props
---

<div>
  {title && <h2 class="mb-4 text-2xl md:text-3xl font-semibold">{title}</h2>}
  <ul class="space-y-2">
    {posts.map(post => (
      <li>
        <a href={post.url} class="group py-3 md:flex md:flex-row md:items-baseline md:justify-between text-gray-900 hover:bg-brand-100 focus:bg-brand-100 active:bg-brand-50 rounded-full -mx-5 px-5 hover:no-underline focus:no-underline focus:text-brand-600 w-full block">
          <span class="text-lg sm:text-xl w-full md:w-auto block group-hover:text-brand-600 group-focus:text-brand-600">{post.frontmatter.title}</span>
          <time datetime={post.frontmatter.date} class="text-base text-gray-600 group-hover:text-brand-600 group-focus:text-brand-600">{format(new Date(post.frontmatter.date), 'LLL yyyy')}</time>
        </a>
      </li>
    ))}
  </ul>
</div>
