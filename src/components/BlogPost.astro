---
import Author from './Author.astro';

export interface Props {
	title: string;
	author: string;
	date: string;
	heroImage: string;
	alt: string;
}

const { title, author, date, heroImage, alt } = Astro.props;
---

<article class="prose mx-auto px-4">
  <div>
    <header>
      {heroImage && <img width="720" height="420" class="hero-image" loading="lazy" src={heroImage} alt={alt} />}
      <p class="publish-date">{date}</p>
      <h1 class="title">{title}</h1>
      <Author name="@devinschulz" href="https://twitter.com/devinschulz_" />
    </header>
    <main>
      <slot />
    </main>
  </div>
</article>
